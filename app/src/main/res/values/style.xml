<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- ***************************** textview button ***************************** -->

    <!--    TEXT VIEW STYLE -->
    <style name="tv_title_list" parent="TextAppearance.AppCompat.Medium" >
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black_text</item>
<!--        <item name="android:fontFamily">@font/sf_protext_bold</item>-->
    </style>

    <style name="tv_title_list_14" parent="TextAppearance.AppCompat.Medium" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_text</item>
<!--        <item name="android:fontFamily">@font/sf_protext_bold</item>-->
    </style>

    <style name="tv_title_list_item" parent="TextAppearance.AppCompat.Medium" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_text_tittle_list_item</item>
<!--        <item name="android:fontFamily">@font/sf_protext_medium</item>-->
    </style>

    <style name="tv_content_list_item" parent="TextAppearance.AppCompat.Medium" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_text_content_list_item</item>
    </style>

    <style name="text_tittle_style" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_content_style_grey" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="tv_title_white" parent="TextAppearance.AppCompat.Medium" >
        <item name="android:textSize">@dimen/margin_32dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
<!--        <item name="android:fontFamily">@font/sf_protext_medium</item>-->
    </style>

    <style name="tv_subtitle_white" parent="TextAppearance.AppCompat.Medium" >
        <item name="android:textSize">@dimen/margin_16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
<!--        <item name="android:fontFamily">@font/sf_protext_medium</item>-->
    </style>

    <style name="text_tittle_list" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_content_style_black" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <!--  bottom sheet dialog -->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--    Dropdown-->


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryDark">@color/orange_700</item>
        <item name="colorAccent">@color/orange_500</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
    </style>


    <!--        Home Gear Option-->
    <!-- Style to replace actionbar overflow icon. set item 'android:actionOverflowButtonStyle' in AppTheme -->
    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_home_green</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:contentDescription">"OnCreateOptionMenu"</item>
    </style>

</resources>