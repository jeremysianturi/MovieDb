<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:padding="@dimen/margin_4"
    app:cardCornerRadius="@dimen/margin_8"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint22"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_poster_popular"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"

            app:layout_constraintStart_toStartOf="@id/constraint22"
            app:layout_constraintEnd_toEndOf="@id/constraint22"
            app:layout_constraintTop_toTopOf="@id/constraint22"
            app:layout_constraintBottom_toTopOf="@id/tv_title_popular">
        </ImageView>

        <TextView
            android:id="@+id/tv_title_popular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toStartOf="@id/constraint22"
            app:layout_constraintEnd_toEndOf="@id/constraint22"
            app:layout_constraintTop_toBottomOf="@id/iv_poster_popular"
            app:layout_constraintBottom_toTopOf="@id/tv_cast_popular">
        </TextView>

        <TextView
            android:id="@+id/tv_cast_popular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toStartOf="@id/constraint22"
            app:layout_constraintEnd_toEndOf="@id/constraint22"
            app:layout_constraintTop_toBottomOf="@id/tv_title_popular"
            app:layout_constraintBottom_toBottomOf="@id/constraint22">
        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>