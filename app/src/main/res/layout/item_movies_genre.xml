<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:padding="@dimen/margin_4"
    app:cardCornerRadius="@dimen/margin_8"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint2204"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title_movies_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_8"

            app:layout_constraintStart_toStartOf="@id/constraint2204"
            app:layout_constraintEnd_toEndOf="@id/constraint2204"
            app:layout_constraintBottom_toBottomOf="@id/constraint2204"
            app:layout_constraintTop_toTopOf="@id/constraint2204">
        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>